<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="kafi.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:kafi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:kafi.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:ShellViewModel />
    </Page.DataContext>
    <NavigationView
        x:Name="NavigationViewControl"
        ExpandedModeThresholdWidth="1200"
        IsBackButtonVisible="Collapsed"
        IsPaneToggleButtonVisible="False"
        IsSettingsVisible="False"
        Loaded="Page_Loaded"
        MenuItemsSource="{Binding NavItems}"
        OpenPaneLength="280"
        PaneClosing="NavView_PaneClosing"
        PaneOpening="NavView_PaneOpening"
        SelectionChanged="OnNavigationViewSelectionChanged">
        <NavigationView.Background>
            <ImageBrush ImageSource="/Assets/Bg.png" />
        </NavigationView.Background>
        <NavigationView.PaneCustomContent>
            <StackPanel Margin="0,50" HorizontalAlignment="Center">
                <ImageIcon
                    Width="50"
                    Height="50"
                    Source="/Assets/Kafi.png" />
                <TextBlock
                    HorizontalAlignment="Center"
                    FontFamily="{StaticResource ClimateCrisis}"
                    FontSize="30"
                    Text="Kafi" />
                <TextBlock
                    Margin="0,0,0,50"
                    FontFamily="{StaticResource SeoulHangangCL}"
                    FontSize="20"
                    Text="POS System" />
            </StackPanel>
        </NavigationView.PaneCustomContent>
        <NavigationView.MenuItemTemplate>
            <DataTemplate x:DataType="viewmodels:NavItem">
                <StackPanel
                    Margin="14,30"
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="10">
                    <ImageIcon
                        Width="20"
                        Height="20"
                        Source="{Binding Icon}" />
                    <TextBlock
                        x:Name="ItemContent"
                        FontSize="16"
                        Tag="{Binding Tag}"
                        Text="{Binding Content}" />
                </StackPanel>
            </DataTemplate>
        </NavigationView.MenuItemTemplate>
        <!--  Main Content  -->
        <Frame x:Name="ContentFrame" />
    </NavigationView>
</Page>
