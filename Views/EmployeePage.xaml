<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="kafi.Views.EmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:kafi.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:kafi.Helpers"
    xmlns:local="using:kafi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:BindingProxy x:Key="EmployeeProxy" Data="{x:Bind ViewModel}" />
        <converters:BirthdateToAgeConverter x:Key="BirthdateToAgeConverter" />
        <converters:IdToTextConverter x:Key="IdToTextConverter" />
        <converters:PriceToStringConverter x:Key="PriceToStringConverter" />
        <converters:TimeToStringConverter x:Key="TimeToStringConverter" />
        <converters:DateTimeToDateTimeOffsetConverter x:Key="DateTimeToDateTimeOffsetConverter" />
        <converters:ImageStringToImageSourceConverter x:Key="ImageStringToImageSourceConverter" />
        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPressed" Color="Transparent" />
        <DataTemplate x:Key="TextBoxHeaderTemplate">
            <TextBlock
                FontFamily="{StaticResource LexendLight}"
                FontSize="14"
                FontWeight="Light"
                Foreground="Black"
                Text="{Binding}" />
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid Padding="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Top" Style="{StaticResource PageTitleStyle}">
                    <Run Text="Nhân Viên" />
                    <Run Text="(" /><Run Text="{x:Bind ViewModel.TotalEmployees, Mode=OneWay}" /><Run Text=")" />
                </TextBlock>
                <Button
                    x:Name="AddEmployeeButton"
                    Grid.Column="1"
                    Padding="10,8"
                    VerticalAlignment="Top"
                    Background="{StaticResource SecondaryBrush}"
                    Click="AddEmployeeButton_Click"
                    CornerRadius="10"
                    Foreground="White"
                    PointerEntered="AddEmployeeButton_PointerEntered"
                    PointerExited="AddEmployeeButton_PointerExited">
                    <StackPanel
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock
                            x:Name="AddInventoryButtonText"
                            Foreground="White"
                            Text="Thêm nhân viên mới" />
                        <FontIcon Glyph="&#xECC8;" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid
                Grid.Row="1"
                Padding="40,20"
                Background="White"
                CornerRadius="10"
                RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <controls:DataGrid
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    Background="White"
                    CanUserReorderColumns="True"
                    CellStyle="{StaticResource CenterDataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource CenterDataGridColumnHeaderStyle}"
                    ColumnWidth="*"
                    Foreground="#71747D"
                    FrozenColumnCount="1"
                    GridLinesVisibility="Horizontal"
                    HorizontalScrollBarVisibility="Hidden"
                    IsReadOnly="True"
                    ItemsSource="{x:Bind ViewModel.Employees, Mode=OneWay}"
                    RowHeight="50"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Auto">
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Binding="{Binding Name}"
                            CellStyle="{StaticResource LeftDataGridCellStyle}"
                            Header="Tên"
                            HeaderStyle="{StaticResource DefaultDataGridColumnHeaderStyle}" />
                        <controls:DataGridTemplateColumn
                            CellStyle="{StaticResource LeftDataGridCellStyle}"
                            Header="Email"
                            HeaderStyle="{StaticResource DefaultDataGridColumnHeaderStyle}">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Padding="10"
                                        VerticalAlignment="Center"
                                        Foreground="#71747D"
                                        Text="{Binding Email}">
                                        <ToolTipService.ToolTip>
                                            <ToolTip
                                                Content="{Binding Email}"
                                                Placement="Top"
                                                VerticalOffset="10" />
                                        </ToolTipService.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTextColumn Binding="{Binding Phone}" Header="Số điện thoại" />
                        <controls:DataGridTextColumn Binding="{Binding Birthdate, Converter={StaticResource BirthdateToAgeConverter}}" Header="Tuổi" />
                        <controls:DataGridTemplateColumn Header="Thời gian làm việc">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="10,0"
                                        VerticalAlignment="Center"
                                        Foreground="#71747D">
                                        <Run Text="{Binding StartShift, Converter={StaticResource TimeToStringConverter}}" />
                                        <Run Text="-" />
                                        <Run Text="{Binding EndShift, Converter={StaticResource TimeToStringConverter}}" />
                                    </TextBlock>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                        <controls:DataGridTextColumn
                            Binding="{Binding Salary, Converter={StaticResource PriceToStringConverter}}"
                            CellStyle="{StaticResource RightDataGridCellStyle}"
                            Header="Lương"
                            HeaderStyle="{StaticResource RightDataGridColumnHeaderStyle}" />
                        <controls:DataGridTemplateColumn
                            Width="Auto"
                            CanUserReorder="False"
                            CanUserResize="False"
                            HeaderStyle="{StaticResource RightDataGridColumnHeaderStyle}">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel
                                        Margin="10,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="10">
                                        <StackPanel.Resources>
                                            <Style TargetType="Button">
                                                <Setter Property="FontWeight" Value="Bold" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="CornerRadius" Value="10" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <Button
                                            x:Name="ViewEmployeeButton"
                                            Click="ViewEmployeeButton_Click"
                                            Command="{Binding Data.ViewEmployeeCommand, Source={StaticResource EmployeeProxy}}"
                                            CommandParameter="{Binding Id}">
                                            <FontIcon Glyph="&#xE890;" />
                                        </Button>
                                        <Button Command="{Binding Data.DeleteEmployeeCommand, Source={StaticResource EmployeeProxy}}" CommandParameter="{Binding Id}">
                                            <FontIcon Foreground="Red" Glyph="&#xE74D;" />
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
                <ProgressRing
                    Grid.RowSpan="3"
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="50">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="#DBDBDB" />
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="Height" Value="30" />
                            <Setter Property="Width" Value="100" />
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="PreviousButton" Command="{x:Bind ViewModel.GoToPreviousPageCommand}">
                        Trang trước
                    </Button>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock x:Name="CurrentDataPage" Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" />
                        <TextBlock Text="/" />
                        <TextBlock x:Name="TotalDataPage" Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" />
                    </StackPanel>
                    <Button x:Name="NextButton" Command="{x:Bind ViewModel.GoToNextPageCommand}">
                        Trang sau
                    </Button>
                    <ComboBox SelectedValue="{x:Bind ViewModel.PageSize, Mode=TwoWay}">
                        <x:Int32>5</x:Int32>
                        <x:Int32>10</x:Int32>
                        <x:Int32>15</x:Int32>
                        <x:Int32>20</x:Int32>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>
        <RelativePanel Margin="-20,-105,-20,-20" Padding="10">
            <Popup
                x:Name="AddEmployeePopup"
                Width="500"
                Height="200"
                IsLightDismissEnabled="True"
                IsOpen="False"
                LightDismissOverlayMode="On"
                RelativePanel.AlignRightWithPanel="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition Edge="Right" />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Grid
                    Width="{Binding ElementName=AddEmployeePopup, Path=Width}"
                    Height="{Binding ElementName=AddEmployeePopup, Path=Height}"
                    Padding="30"
                    Background="White"
                    Canvas.ZIndex="2"
                    CornerRadius="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="PopupTranslateTransform" X="300" />
                    </Grid.RenderTransform>
                    <Grid Grid.Row="0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource LexendMedium}"
                            FontSize="20"
                            FontWeight="Medium"
                            Text="Thêm nhân viên mới"
                            TextAlignment="Center" />
                        <Button
                            x:Name="ClosePopupButton"
                            Width="30"
                            Height="30"
                            Padding="0"
                            HorizontalAlignment="Right"
                            Background="{StaticResource PrimaryBrush}"
                            Click="ClosePopupButton_Click"
                            CornerRadius="100">
                            <FontIcon FontSize="12" Glyph="&#xE970;" />
                        </Button>
                    </Grid>
                    <Border
                        Grid.Row="1"
                        Height="1"
                        Margin="0,20"
                        HorizontalAlignment="Stretch"
                        Background="Black" />
                    <Grid
                        Grid.Row="2"
                        ColumnSpacing="20"
                        RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="CornerRadius" Value="16" />
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Padding" Value="0,0,0,0" />
                            </Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Spacing" Value="8" />
                            </Style>
                        </Grid.Resources>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Họ và Tên" />
                            <Border>
                                <TextBox PlaceholderText="Nhập tên" Text="{x:Bind ViewModel.UserName, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Email" />
                            <Border>
                                <TextBox PlaceholderText="Nhập email" Text="{x:Bind ViewModel.Email, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Số điện thoại" />
                            <Border>
                                <TextBox PlaceholderText="Nhập số điện thoại" Text="{x:Bind ViewModel.Phone, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Địa chỉ" />
                            <Border>
                                <TextBox PlaceholderText="Nhập địa chỉ" Text="{x:Bind ViewModel.Address, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Ngày sinh" />
                            <Border>
                                <CalendarDatePicker
                                    x:Name="BirthdatePicker"
                                    Width="190"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Date="{x:Bind ViewModel.Birthdate, Mode=TwoWay}"
                                    DateChanged="BirthdatePicker_DateChanged"
                                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                    FontSize="16"
                                    PlaceholderText="Chọn ngày sinh" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Lương" />
                            <Border>
                                <TextBox PlaceholderText="Nhập lương" Text="{x:Bind ViewModel.Salary, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Ca bắt đầu" />
                            <Border>
                                <TimePicker
                                    x:Name="StartShiftPicer"
                                    Margin="-33,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ClockIdentifier="24HourClock"
                                    MinuteIncrement="15"
                                    Time="{x:Bind ViewModel.StartShift, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Ca kết thúc" />
                            <Border>
                                <TimePicker
                                    x:Name="EndShiftPicker"
                                    Margin="-33,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ClockIdentifier="24HourClock"
                                    MinuteIncrement="15"
                                    Time="{x:Bind ViewModel.EndShift, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Row="3" Spacing="40">
                        <TextBlock Style="{StaticResource ErrorMessageStyle}" Text="{x:Bind ViewModel.Message, Mode=OneWay}" />
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="20">
                            <Button
                                x:Name="DeleteAllInputsButton"
                                BorderThickness="0"
                                Command="{x:Bind ViewModel.DeleteAllInputCommand}"
                                PointerEntered="DeleteAllInputsButton_PointerEntered"
                                PointerExited="DeleteAllInputsButton_PointerExited">
                                <TextBlock x:Name="DeleteAllText">
                                    <Underline>
                                        Xóa
                                    </Underline>
                                </TextBlock>
                            </Button>
                            <Button
                                x:Name="SubmitAddEmployeeButton"
                                Padding="40,10,40,10"
                                Background="{StaticResource SecondaryBrush}"
                                Command="{x:Bind ViewModel.AddEmployeeCommand}"
                                CornerRadius="20"
                                Foreground="White">
                                Lưu
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Popup>
        </RelativePanel>
        <Grid Margin="0,-75,0,0" Padding="20">
            <Popup
                x:Name="ViewEmployeePopup"
                Width="1000"
                Height="200"
                Closed="ViewEmployeePopup_Closed"
                IsLightDismissEnabled="True"
                IsOpen="False"
                LightDismissOverlayMode="On">
                <Grid
                    Width="{Binding ElementName=ViewEmployeePopup, Path=Width}"
                    Height="{Binding ElementName=ViewEmployeePopup, Path=Height}"
                    Padding="30,20"
                    Background="White"
                    Canvas.ZIndex="2"
                    CornerRadius="20"
                    RowSpacing="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="PopupTranslateYTransform" Y="-600" />
                    </Grid.RenderTransform>
                    <StackPanel
                        Margin="-6,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <Button
                            x:Name="CloseViewPopupButton"
                            Width="30"
                            Height="30"
                            Padding="-2,0,0,0"
                            HorizontalAlignment="left"
                            Background="{StaticResource PrimaryBrush}"
                            Click="CloseViewPopupButton_Click"
                            CornerRadius="100">
                            <FontIcon FontSize="12" Glyph="&#xE96F;" />
                        </Button>
                        <TextBlock
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource LexendMedium}"
                            FontSize="18"
                            FontWeight="Medium"
                            Text="{x:Bind ViewModel.SelectedUser.Name, Mode=OneWay}" />
                    </StackPanel>
                    <Grid Grid.Row="1" ColumnSpacing="40">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Spacing="20">
                            <TextBlock
                                FontFamily="{StaticResource LexendMedium}"
                                FontSize="17"
                                FontWeight="Medium"
                                Text="Ảnh" />
                            <PersonPicture
                                Width="200"
                                Height="200"
                                Background="#D19F9F"
                                ProfilePicture="{x:Bind ViewModel.SelectedUser.Image, Converter={StaticResource ImageStringToImageSourceConverter}, Mode=OneWay}" />
                            <Button
                                x:Name="EditEmployeeButton"
                                Padding="10,9"
                                HorizontalAlignment="Stretch"
                                Background="{StaticResource SecondaryBrush}"
                                Click="EditEmployeeButton_Click"
                                CornerRadius="10"
                                FontFamily="{StaticResource Lexend}"
                                Foreground="White">
                                Chỉnh sửa profile
                            </Button>
                            <Grid
                                x:Name="PostEditGrid"
                                ColumnSpacing="10"
                                Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Button
                                    x:Name="CancelEditEmployeeButton"
                                    Padding="10,8"
                                    HorizontalAlignment="Stretch"
                                    BorderBrush="{StaticResource SecondaryBrush}"
                                    Click="ViewEmployeePopup_Closed"
                                    Command="{x:Bind ViewModel.ViewEmployeeCommand}"
                                    CommandParameter="{x:Bind ViewModel.SelectedUser.Id, Mode=OneWay}"
                                    CornerRadius="10"
                                    FontFamily="{StaticResource Lexend}"
                                    Foreground="{StaticResource SecondaryBrush}">
                                    Hủy
                                </Button>
                                <Button
                                    Grid.Column="1"
                                    Padding="10,9"
                                    HorizontalAlignment="Stretch"
                                    Background="{StaticResource SecondaryBrush}"
                                    Command="{x:Bind ViewModel.UpdateEmployeeCommand}"
                                    CornerRadius="10"
                                    FontFamily="{StaticResource Lexend}"
                                    Foreground="White">
                                    Lưu
                                </Button>
                            </Grid>
                            <Button
                                Padding="10,8"
                                HorizontalAlignment="Stretch"
                                BorderBrush="Red"
                                Click="CloseViewPopupButton_Click"
                                Command="{x:Bind ViewModel.DeleteEmployeeCommand}"
                                CommandParameter="{x:Bind ViewModel.SelectedUser.Id, Mode=OneWay}"
                                CornerRadius="10"
                                FontFamily="{StaticResource Lexend}"
                                Foreground="red">
                                Xóa nhân viên
                            </Button>
                        </StackPanel>
                        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Padding="0,0,14,0" Spacing="20">
                                <TextBlock
                                    FontFamily="{StaticResource LexendMedium}"
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Text="Thông tin cá nhân" />
                                <Grid
                                    x:Name="PersonalInfoGrid"
                                    Padding="20"
                                    HorizontalAlignment="Stretch"
                                    Background="{StaticResource PrimaryBrush}"
                                    ColumnSpacing="20"
                                    CornerRadius="10"
                                    RowSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                            <Setter Property="HeaderTemplate" Value="{StaticResource TextBoxHeaderTemplate}" />
                                            <Setter Property="FontFamily" Value="{StaticResource LexendMedium}" />
                                            <Setter Property="FontWeight" Value="Medium" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="Foreground" Value="Black" />
                                            <Setter Property="CornerRadius" Value="10" />
                                        </Style>
                                    </Grid.Resources>
                                    <TextBox Header="Tên" Text="{x:Bind ViewModel.SelectedUser.Name, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Header="Email"
                                        Text="{x:Bind ViewModel.SelectedUser.Email, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Row="1"
                                        Header="Số điện thoại"
                                        Text="{x:Bind ViewModel.SelectedUser.Phone, Mode=TwoWay}" />
                                    <CalendarDatePicker
                                        x:Name="EditBirthdatePicker"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="10"
                                        Date="{x:Bind ViewModel.SelectedUser.Birthdate, Converter={StaticResource DateTimeToDateTimeOffsetConverter}, Mode=TwoWay}"
                                        DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="Black"
                                        Header="Ngày sinh"
                                        HeaderTemplate="{StaticResource TextBoxHeaderTemplate}"
                                        IsHitTestVisible="False" />
                                    <TextBox
                                        Grid.Row="2"
                                        Header="Địa chỉ"
                                        Text="{x:Bind ViewModel.SelectedUser.Address, Mode=TwoWay}" />
                                </Grid>
                                <TextBlock
                                    FontFamily="{StaticResource LexendMedium}"
                                    FontSize="17"
                                    FontWeight="Medium"
                                    Text="Chi tiết công việc" />
                                <Grid
                                    x:Name="JobInfoGrid"
                                    Padding="20"
                                    HorizontalAlignment="Stretch"
                                    Background="{StaticResource PrimaryBrush}"
                                    ColumnSpacing="20"
                                    CornerRadius="10"
                                    RowSpacing="10">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderThickness" Value="0" />
                                            <Setter Property="IsReadOnly" Value="True" />
                                            <Setter Property="HeaderTemplate" Value="{StaticResource TextBoxHeaderTemplate}" />
                                            <Setter Property="FontFamily" Value="{StaticResource LexendMedium}" />
                                            <Setter Property="FontWeight" Value="Medium" />
                                            <Setter Property="FontSize" Value="16" />
                                            <Setter Property="CornerRadius" Value="10" />
                                        </Style>
                                    </Grid.Resources>
                                    <TextBox
                                        x:Name="RoleTextBox"
                                        Header="Vai trò"
                                        Text="{x:Bind ViewModel.SelectedUser.Role, Mode=TwoWay}" />
                                    <TextBox
                                        Grid.Column="1"
                                        Header="Lương"
                                        Text="{x:Bind ViewModel.SelectedUser.Salary, Mode=TwoWay}" />
                                    <TimePicker
                                        x:Name="StartShiftTimePicker"
                                        Grid.Row="1"
                                        HorizontalAlignment="Stretch"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ClockIdentifier="24HourClock"
                                        CornerRadius="10"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="Transparent"
                                        Header="Ca bắt đầu"
                                        HeaderTemplate="{StaticResource TextBoxHeaderTemplate}"
                                        IsHitTestVisible="False"
                                        Loaded="TimePicker_Loaded"
                                        MinuteIncrement="15"
                                        Time="{x:Bind ViewModel.SelectedUser.StartShift, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock
                                        x:Name="StartShiftText"
                                        Grid.Row="1"
                                        Padding="10,0,0,4"
                                        VerticalAlignment="Bottom"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        IsHitTestVisible="False"
                                        Text="{Binding ElementName=StartShiftTimePicker, Path=Time, Converter={StaticResource TimeToStringConverter}, Mode=OneWay}" />
                                    <TimePicker
                                        x:Name="EndShiftTimePicker"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        ClockIdentifier="24HourClock"
                                        CornerRadius="10"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        Foreground="Transparent"
                                        Header="Ca kết thúc"
                                        HeaderTemplate="{StaticResource TextBoxHeaderTemplate}"
                                        IsHitTestVisible="False"
                                        Loaded="TimePicker_Loaded"
                                        MinuteIncrement="15"
                                        Time="{x:Bind ViewModel.SelectedUser.EndShift, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                    <TextBlock
                                        x:Name="EndShiftText"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Padding="10,0,0,4"
                                        VerticalAlignment="Bottom"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontSize="16"
                                        FontWeight="Medium"
                                        IsHitTestVisible="False"
                                        Text="{Binding ElementName=EndShiftTimePicker, Path=Time, Converter={StaticResource TimeToStringConverter}, Mode=OneWay}" />
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Popup>
        </Grid>
    </Grid>
</Page>
