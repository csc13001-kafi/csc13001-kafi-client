<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="kafi.Views.EmployeePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:converters="using:kafi.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:kafi.Helpers"
    xmlns:local="using:kafi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wctprimitives="using:CommunityToolkit.WinUI.UI.Controls.Primitives"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:BindingProxy x:Key="BindingProxy" Data="{x:Bind ViewModel}" />
        <converters:BirthdateToAgeConverter x:Key="BirthdateToAgeConverter" />
        <converters:IdToTextConverter x:Key="IdToTextConverter" />
        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPressed" Color="Transparent" />
    </Page.Resources>
    <Grid>
        <Grid Padding="0,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock VerticalAlignment="Top" Style="{StaticResource PageTitleStyle}">
                    <Run Text="Nhân Viên" />
                    <Run Text="(" /><Run Text="{x:Bind ViewModel.TotalEmployees, Mode=OneWay}" /><Run Text=")" />
                </TextBlock>
                <Button
                    x:Name="AddEmployeeButton"
                    Grid.Column="1"
                    Padding="10,8"
                    VerticalAlignment="Top"
                    Background="{StaticResource SecondaryBrush}"
                    Click="AddEmployeeButton_Click"
                    CornerRadius="10"
                    Foreground="White"
                    PointerEntered="AddEmployeeButton_PointerEntered"
                    PointerExited="AddEmployeeButton_PointerExited">
                    <StackPanel
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <TextBlock
                            x:Name="AddInventoryButtonText"
                            Foreground="White"
                            Text="Thêm nhân viên mới" />
                        <FontIcon Glyph="&#xECC8;" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid
                Grid.Row="1"
                Padding="40"
                Background="White"
                CornerRadius="10"
                RowSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <controls:DataGrid
                    x:Name="EmployeeDataGrid"
                    MaxHeight="Infinity"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    Background="White"
                    CanUserReorderColumns="True"
                    CellEditEnded="DataGrid_CellEditEnded"
                    ColumnWidth="*"
                    Foreground="#71747D"
                    FrozenColumnCount="1"
                    GridLinesVisibility="Horizontal"
                    HorizontalScrollBarVisibility="Hidden"
                    ItemsSource="{x:Bind ViewModel.Employees, Mode=OneWay}"
                    RowHeight="50"
                    VerticalScrollBarVisibility="Auto">
                    <controls:DataGrid.ColumnHeaderStyle>
                        <Style TargetType="wctprimitives:DataGridColumnHeader">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="wctprimitives:DataGridColumnHeader">
                                        <ContentPresenter
                                            Background="White"
                                            FontFamily="{StaticResource LexendBold}"
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Foreground="Black" />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </controls:DataGrid.ColumnHeaderStyle>
                    <controls:DataGrid.Columns>
                        <controls:DataGridTextColumn
                            Binding="{Binding Id, Converter={StaticResource IdToTextConverter}}"
                            Header="ID"
                            IsReadOnly="True" />
                        <controls:DataGridTextColumn Binding="{Binding Name}" Header="Tên" />
                        <controls:DataGridTextColumn Binding="{Binding Email}" Header="Email" />
                        <controls:DataGridTextColumn Binding="{Binding Phone}" Header="Số điện thoại" />
                        <controls:DataGridTextColumn
                            MaxWidth="50"
                            Binding="{Binding Birthdate, Converter={StaticResource BirthdateToAgeConverter}}"
                            Header="Tuổi" />
                        <controls:DataGridTextColumn Binding="{Binding Salary}" Header="Lương" />
                        <controls:DataGridTextColumn Header="Thời gian làm việc" />
                        <controls:DataGridTemplateColumn
                            MaxWidth="50"
                            CanUserReorder="False"
                            CanUserResize="False"
                            IsReadOnly="True">
                            <controls:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        BorderThickness="0"
                                        Command="{Binding Data.DeleteEmployeeCommand, Source={StaticResource BindingProxy}}"
                                        CommandParameter="{Binding Id}"
                                        FontWeight="Bold"
                                        Foreground="Red">
                                        <FontIcon Glyph="&#xE74D;" />
                                    </Button>
                                </DataTemplate>
                            </controls:DataGridTemplateColumn.CellTemplate>
                        </controls:DataGridTemplateColumn>
                    </controls:DataGrid.Columns>
                </controls:DataGrid>
                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal"
                    Spacing="50">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="#DBDBDB" />
                            <Setter Property="CornerRadius" Value="10" />
                            <Setter Property="Height" Value="30" />
                            <Setter Property="Width" Value="100" />
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="PreviousButton" Command="{x:Bind ViewModel.GoToPreviousPageCommand}">
                        Trang trước
                    </Button>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <TextBlock x:Name="CurrentDataPage" Text="{x:Bind ViewModel.CurrentPage, Mode=OneWay}" />
                        <TextBlock Text="/" />
                        <TextBlock x:Name="TotalDataPage" Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}" />
                    </StackPanel>
                    <Button x:Name="NextButton" Command="{x:Bind ViewModel.GoToNextPageCommand}">
                        Trang sau
                    </Button>
                    <ComboBox SelectedValue="{x:Bind ViewModel.PageSize, Mode=TwoWay}">
                        <x:Int32>5</x:Int32>
                        <x:Int32>10</x:Int32>
                        <x:Int32>15</x:Int32>
                        <x:Int32>20</x:Int32>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>
        <RelativePanel Margin="-20,-105,-20,-20" Padding="10">
            <Popup
                x:Name="AddEmployeePopup"
                Width="500"
                Height="200"
                IsLightDismissEnabled="True"
                IsOpen="False"
                LightDismissOverlayMode="On"
                RelativePanel.AlignRightWithPanel="True">
                <Popup.ChildTransitions>
                    <TransitionCollection>
                        <PaneThemeTransition Edge="Right" />
                    </TransitionCollection>
                </Popup.ChildTransitions>
                <Grid
                    Width="{Binding ElementName=AddEmployeePopup, Path=Width}"
                    Height="{Binding ElementName=AddEmployeePopup, Path=Height}"
                    Padding="30"
                    Background="White"
                    Canvas.ZIndex="2"
                    CornerRadius="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="10*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="PopupTranslateTransform" X="300" />
                    </Grid.RenderTransform>
                    <Grid Grid.Row="0" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource LexendMedium}"
                            FontSize="20"
                            FontWeight="Medium"
                            Text="Thêm nhân viên mới"
                            TextAlignment="Center" />
                        <Button
                            x:Name="ClosePopupButton"
                            Width="30"
                            Height="30"
                            Padding="0"
                            HorizontalAlignment="Right"
                            Background="{StaticResource PrimaryBrush}"
                            Click="ClosePopupButton_Click"
                            CornerRadius="100">
                            <FontIcon FontSize="12" Glyph="&#xE970;" />
                        </Button>
                    </Grid>
                    <Border
                        Grid.Row="1"
                        Height="1"
                        HorizontalAlignment="Stretch"
                        Background="Black" />
                    <Grid
                        Grid.Row="2"
                        ColumnSpacing="20"
                        RowSpacing="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="CornerRadius" Value="16" />
                                <Setter Property="Height" Value="40" />
                                <Setter Property="Padding" Value="10,0,0,0" />
                            </Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderThickness" Value="0" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                                <Setter Property="Padding" Value="0,0,0,0" />
                            </Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Spacing" Value="8" />
                            </Style>
                        </Grid.Resources>

                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Họ và Tên" />
                            <Border>
                                <TextBox PlaceholderText="Nhập tên" Text="{x:Bind ViewModel.UserName, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Email" />
                            <Border>
                                <TextBox PlaceholderText="Nhập email" Text="{x:Bind ViewModel.Email, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Số điện thoại" />
                            <Border>
                                <TextBox PlaceholderText="Nhập số điện thoại" Text="{x:Bind ViewModel.Phone, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Địa chỉ" />
                            <Border>
                                <TextBox PlaceholderText="Nhập địa chỉ" Text="{x:Bind ViewModel.Address, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Ngày sinh" />
                            <Border>
                                <CalendarDatePicker
                                    x:Name="BirthdatePicker"
                                    Width="190"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Date="{x:Bind ViewModel.Birthdate, Mode=TwoWay}"
                                    DateChanged="BirthdatePicker_DateChanged"
                                    DateFormat="{}{day.integer}/{month.integer}/{year.full}"
                                    FontSize="16"
                                    PlaceholderText="Chọn ngày sinh" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Lương" />
                            <Border>
                                <TextBox PlaceholderText="Nhập lương" Text="{x:Bind ViewModel.Salary, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock FontSize="16" Text="Ca bắt đầu" />
                            <Border>
                                <TimePicker
                                    x:Name="StartShiftPicer"
                                    Margin="-33,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ClockIdentifier="24HourClock"
                                    MinuteIncrement="15"
                                    Time="{x:Bind ViewModel.StartShift, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Grid.Column="1">
                            <TextBlock FontSize="16" Text="Ca kết thúc" />
                            <Border>
                                <TimePicker
                                    x:Name="EndShiftPicker"
                                    Margin="-33,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    ClockIdentifier="24HourClock"
                                    MinuteIncrement="15"
                                    Time="{x:Bind ViewModel.EndShift, Mode=TwoWay}" />
                            </Border>
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Row="3" Spacing="40">
                        <TextBlock Style="{StaticResource ErrorMessageStyle}" Text="{x:Bind ViewModel.Message, Mode=OneWay}" />
                        <StackPanel
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="20">
                            <Button
                                x:Name="DeleteAllInputsButton"
                                BorderThickness="0"
                                Command="{x:Bind ViewModel.DeleteAllInputCommand}"
                                PointerEntered="DeleteAllInputsButton_PointerEntered"
                                PointerExited="DeleteAllInputsButton_PointerExited">
                                <TextBlock x:Name="DeleteAllText">
                                    <Underline>
                                        Xóa
                                    </Underline>
                                </TextBlock>
                            </Button>
                            <Button
                                x:Name="SubmitAddEmployeeButton"
                                Padding="40,10,40,10"
                                Background="{StaticResource SecondaryBrush}"
                                Command="{x:Bind ViewModel.AddEmployeeCommand}"
                                CornerRadius="20"
                                Foreground="White">
                                Lưu
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Popup>
        </RelativePanel>
    </Grid>
</Page>
