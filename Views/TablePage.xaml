<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="kafi.Views.TablePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:kafi.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:kafi.Helpers"
    xmlns:local="using:kafi.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:kafi.Models"
    xmlns:vm="using:kafi.ViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:BindingProxy x:Key="TableProxy" Data="{x:Bind ViewModel, Mode=OneWay}" />
        <converters:PriceToStringConverter x:Key="PriceToStringConverter" />
        <converters:NotVisibilityConverter x:Key="NotVisibilityConverter" />
        <converters:ModeToStringConverter x:Key="ModeToStringConverter" />
        <converters:ModeToVisibilityConverter x:Key="ModeToVisibilityConverter" />
        <converters:TableStatusToBackgroundConverter x:Key="TableStatusToBackgroundConverter" />
        <converters:TableStatusToForegroundConverter x:Key="TableStatusToForegroundConverter" />
        <converters:TableStatusToBrushConverter x:Key="TableStatusToBrushConverter" />
        <converters:TableStatusToVisibilityConverter x:Key="TableStatusToVisibilityConverter" />
        <converters:IsProductAvailableToOpactityConverter x:Key="IsProductAvailableToOpactityConverter" />
        <converters:IsProductAvailableToVisibilityConverter x:Key="IsProductAvailableToVisibilityConverter" />
        <converters:IdToTextConverter x:Key="IdToTextConverter" />
        <converters:PaymentTypeToBackgroundConverter x:Key="PaymentTypeToBackgroundConverter" />
        <converters:PaymentTypeToForegroundConverter x:Key="PaymentTypeToForegroundConverter" />
        <converters:PaymentTypeToVisibilityConverter x:Key="PaymentTypeToVisibilityConverter" />
        <converters:SelectedProductCountToVisibilityConverter x:Key="SelectedProductCountToVisibilityConverter" />
        <converters:PhoneToStringConverter x:Key="PhoneToStringConverter" />
        <SolidColorBrush x:Key="TextControlBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBackgroundFocused" Color="Transparent" />
        <SolidColorBrush x:Key="TextControlBorderBrushFocused" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="CalendarDatePickerBackgroundPressed" Color="Transparent" />
        <SolidColorBrush x:Key="ComboBoxBackgroundPointerOver" Color="Transparent" />
        <SolidColorBrush x:Key="ComboBoxForegroundPointerOver" Color="Black" />
        <SolidColorBrush x:Key="ComboBoxBackgroundPressed" Color="Transparent" />

        <CollectionViewSource
            x:Key="GroupedSelectedProducts"
            IsSourceGrouped="True"
            Source="{x:Bind ViewModel.GroupedSelectedProducts, Mode=OneWay}" />
    </Page.Resources>
    <Grid>
        <Grid Margin="0,0,10,0" ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>

            <!--  Loading indicator  -->
            <ProgressRing
                Grid.Row="1"
                Width="50"
                Height="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

            <SelectorBar
                x:Name="OrderSelectorBar"
                Margin="0,0,0,10"
                SelectionChanged="OrderSelectorBar_SelectionChanged">
                <SelectorBar.Resources>
                    <Style TargetType="SelectorBarItem">
                        <Setter Property="FontFamily" Value="{StaticResource LexendMedium}" />
                        <Setter Property="FontWeight" Value="Medium" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Width" Value="64" />
                    </Style>
                </SelectorBar.Resources>
                <SelectorBarItem
                    x:Name="TableBarItem"
                    IsSelected="True"
                    Text="Bàn" />
                <SelectorBarItem x:Name="MenuBarItem" Text="Menu" />
            </SelectorBar>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Tables  -->
                <ItemsView
                    x:Name="Table"
                    IsItemInvokedEnabled="True"
                    ItemInvoked="Table_ItemInvoked"
                    ItemsSource="{x:Bind ViewModel.Tables, Mode=OneWay}"
                    SelectionMode="None">
                    <ItemsView.Layout>
                        <UniformGridLayout
                            ItemsStretch="Fill"
                            MinColumnSpacing="20"
                            MinItemHeight="160"
                            MinItemWidth="130"
                            MinRowSpacing="10"
                            Orientation="Horizontal" />
                    </ItemsView.Layout>
                    <ItemsView.ItemTemplate>
                        <DataTemplate x:DataType="vm:TableWrapperViewModel">
                            <ItemContainer Background="{x:Bind Status, Converter={StaticResource TableStatusToBackgroundConverter}, Mode=OneWay}" CornerRadius="10">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Spacing="10">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Orientation" Value="Horizontal" />
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="Spacing" Value="10" />
                                            </Style>
                                            <Style TargetType="Rectangle">
                                                <Setter Property="Width" Value="32" />
                                                <Setter Property="Height" Value="5" />
                                                <Setter Property="RadiusX" Value="4" />
                                                <Setter Property="RadiusY" Value="2" />
                                            </Style>
                                        </Grid.Resources>
                                        <StackPanel>
                                            <Rectangle Fill="{x:Bind Status, Converter={StaticResource TableStatusToBrushConverter}, Mode=OneWay}">
                                                <Rectangle.Clip>
                                                    <RectangleGeometry Rect="0,0,32,3" />
                                                </Rectangle.Clip>
                                            </Rectangle>
                                            <Rectangle Fill="{x:Bind Status, Converter={StaticResource TableStatusToBrushConverter}, Mode=OneWay}">
                                                <Rectangle.Clip>
                                                    <RectangleGeometry Rect="0,0,32,3" />
                                                </Rectangle.Clip>
                                            </Rectangle>
                                        </StackPanel>

                                        <Border
                                            Grid.Row="1"
                                            Width="120"
                                            Height="80"
                                            BorderBrush="{x:Bind Status, Converter={StaticResource TableStatusToBrushConverter}, ConverterParameter=border, Mode=OneWay}"
                                            BorderThickness="2"
                                            CornerRadius="20">
                                            <Grid Visibility="{Binding Data.SelectedProductCount, Source={StaticResource TableProxy}, Mode=OneWay, Converter={StaticResource SelectedProductCountToVisibilityConverter}}">
                                                <Grid
                                                    Padding="10"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    Visibility="{x:Bind Status, Converter={StaticResource TableStatusToVisibilityConverter}, Mode=OneWay}">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="Auto" />
                                                    </Grid.RowDefinitions>
                                                    <TextBlock Foreground="{x:Bind Status, Converter={StaticResource TableStatusToForegroundConverter}, Mode=OneWay}" Text="{Binding Data.TotalPrice, Source={StaticResource TableProxy}, Mode=OneWay, Converter={StaticResource PriceToStringConverter}}" />
                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Padding="1,0,0,0"
                                                        HorizontalAlignment="Left"
                                                        Spacing="4">
                                                        <FontIcon
                                                            VerticalAlignment="Bottom"
                                                            FontSize="14"
                                                            Foreground="{x:Bind Status, Converter={StaticResource TableStatusToForegroundConverter}, Mode=OneWay}"
                                                            Glyph="&#xEC32;" />
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            FontSize="12"
                                                            Foreground="{x:Bind Status, Converter={StaticResource TableStatusToForegroundConverter}, Mode=OneWay}"
                                                            Text="{Binding Data.SelectedProductCount, Source={StaticResource TableProxy}, Mode=OneWay}" />
                                                    </StackPanel>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <StackPanel Grid.Row="2">
                                            <Rectangle Fill="{x:Bind Status, Converter={StaticResource TableStatusToBrushConverter}, Mode=OneWay}">
                                                <Rectangle.Clip>
                                                    <RectangleGeometry Rect="0,2,32,3" />
                                                </Rectangle.Clip>
                                            </Rectangle>
                                            <Rectangle Fill="{x:Bind Status, Converter={StaticResource TableStatusToBrushConverter}, Mode=OneWay}">
                                                <Rectangle.Clip>
                                                    <RectangleGeometry Rect="0,2,32,3" />
                                                </Rectangle.Clip>
                                            </Rectangle>
                                        </StackPanel>
                                    </Grid>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="16"
                                        Foreground="{x:Bind Status, Converter={StaticResource TableStatusToForegroundConverter}, Mode=OneWay}"
                                        Text="{x:Bind Name}" />
                                </StackPanel>
                            </ItemContainer>
                        </DataTemplate>
                    </ItemsView.ItemTemplate>
                </ItemsView>

                <!--  Menu  -->
                <Grid x:Name="Menu" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Categories - 5 columns  -->
                    <ScrollViewer
                        x:Name="CategoryScrollViewer"
                        HorizontalScrollBarVisibility="Disabled"
                        HorizontalScrollMode="Disabled"
                        VerticalScrollBarVisibility="Disabled"
                        VerticalScrollMode="Disabled">
                        <ItemsView
                            x:Name="Category"
                            Margin="10,0"
                            ItemsSource="{x:Bind ViewModel.Categories, Mode=OneWay}"
                            SelectionChanged="Category_SelectionChanged"
                            SelectionMode="Single"
                            SizeChanged="Category_SizeChanged">
                            <ItemsView.Layout>
                                <UniformGridLayout
                                    ItemsJustification="SpaceBetween"
                                    ItemsStretch="Fill"
                                    MinColumnSpacing="20"
                                    MinItemHeight="32"
                                    MinItemWidth="100"
                                    MinRowSpacing="10"
                                    Orientation="Horizontal" />
                            </ItemsView.Layout>
                            <ItemsView.ItemTemplate>
                                <DataTemplate x:DataType="model:Category">
                                    <ItemContainer>
                                        <TextBlock
                                            Grid.Row="1"
                                            Height="Auto"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Foreground="Black"
                                            Text="{x:Bind Name}" />
                                    </ItemContainer>
                                </DataTemplate>
                            </ItemsView.ItemTemplate>
                        </ItemsView>
                    </ScrollViewer>

                    <Border
                        Grid.Row="1"
                        Height="1"
                        Margin="10"
                        Background="Black"
                        Visibility="{x:Bind ViewModel.IsLoading, Converter={StaticResource NotVisibilityConverter}, Mode=OneWay}" />

                    <!--  Menu Items - 6 columns  -->
                    <ItemsView
                        x:Name="Product"
                        Grid.Row="2"
                        MinWidth="220"
                        Margin="10"
                        IsItemInvokedEnabled="True"
                        ItemInvoked="Product_ItemInvoked"
                        ItemsSource="{x:Bind ViewModel.FilteredProducts, Mode=OneWay}"
                        SelectionMode="None">
                        <ItemsView.Layout>
                            <UniformGridLayout
                                MaximumRowsOrColumns="6"
                                MinColumnSpacing="20"
                                MinItemWidth="200"
                                MinRowSpacing="20" />
                        </ItemsView.Layout>
                        <ItemsView.ItemTemplate>
                            <DataTemplate x:DataType="model:Product">
                                <ItemContainer>
                                    <Grid
                                        x:Name="ProductGrid"
                                        Height="160"
                                        Background="White"
                                        CornerRadius="10">
                                        <Grid Opacity="{x:Bind IsAvailable, Converter={StaticResource IsProductAvailableToOpactityConverter}, Mode=OneWay}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <TextBlock
                                                Grid.Row="0"
                                                Margin="10"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                FontFamily="{StaticResource LexendMedium}"
                                                FontSize="15"
                                                FontWeight="Medium"
                                                Text="{x:Bind Name}"
                                                TextAlignment="Center" />
                                            <TextBlock
                                                Grid.Row="1"
                                                Margin="0,-26,20,0"
                                                HorizontalAlignment="Right"
                                                FontSize="16"
                                                Foreground="Gray"
                                                Text="{x:Bind Price, Converter={StaticResource PriceToStringConverter}}"
                                                TextAlignment="Center" />
                                            <Image
                                                Height="100"
                                                Canvas.ZIndex="-1"
                                                Source="{x:Bind Image}"
                                                Stretch="Uniform" />
                                            <Rectangle
                                                Width="{Binding ElementName=ProductGrid, Path=Width}"
                                                VerticalAlignment="Bottom"
                                                Canvas.ZIndex="-2"
                                                Fill="#fef5e6" />
                                        </Grid>
                                        <Grid VerticalAlignment="Center" Visibility="{x:Bind IsAvailable, Converter={StaticResource IsProductAvailableToVisibilityConverter}, Mode=OneWay}">
                                            <Rectangle
                                                Width="{Binding ElementName=ProductGrid, Path=Width}"
                                                Height="40"
                                                Fill="Gray"
                                                Opacity=".4" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="Red"
                                                Text="Hết hàng" />
                                        </Grid>
                                    </Grid>
                                </ItemContainer>
                            </DataTemplate>
                        </ItemsView.ItemTemplate>
                    </ItemsView>
                </Grid>

                <CheckBox
                    x:Name="OpenMenuWhenTableSelectedCheckBox"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Content="Mở menu khi chọn bàn"
                    IsChecked="True" />
            </Grid>

            <controls:GridSplitter
                Grid.RowSpan="2"
                Grid.Column="1"
                Width="16"
                HorizontalAlignment="Left"
                Canvas.ZIndex="2"
                ResizeBehavior="BasedOnAlignment"
                ResizeDirection="Auto">
                <controls:GridSplitter.RenderTransform>
                    <TranslateTransform X="-7" />
                </controls:GridSplitter.RenderTransform>
            </controls:GridSplitter>

            <!--  Order Details  -->
            <Grid
                Grid.RowSpan="2"
                Grid.Column="1"
                Padding="20"
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="10"
                RowSpacing="10"
                Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="FontFamily" Value="{StaticResource LexendLight}" />
                        <Setter Property="FontWeight" Value="Light" />
                        <Setter Property="FontSize" Value="15" />
                        <Setter Property="VerticalAlignment" Value="Center" />
                    </Style>
                </Grid.Resources>
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontFamily="{StaticResource LexendBold}"
                        FontSize="24"
                        FontWeight="Bold"
                        Foreground="Black"
                        Text="{x:Bind ViewModel.SelectedTable.Name, Mode=OneWay}" />
                    <TextBox
                        Grid.Column="1"
                        Background="#F5F5F5"
                        BorderBrush="Transparent"
                        CornerRadius="10"
                        PlaceholderText="Nhập số điện thoại của khách hàng"
                        Text="{x:Bind ViewModel.ClientPhoneNumber, Mode=TwoWay}" />
                </Grid>

                <ItemsView
                    Grid.Row="1"
                    Margin="-20,0"
                    ItemsSource="{x:Bind ViewModel.SelectedProducts, Mode=TwoWay}"
                    SelectionMode="None"
                    Visibility="{x:Bind ViewModel.SelectedProductCount, Mode=OneWay, Converter={StaticResource SelectedProductCountToVisibilityConverter}}">
                    <ItemsView.ItemTemplate>
                        <DataTemplate x:DataType="vm:SelectedProductWrapperViewModel">
                            <ItemContainer PointerEntered="SelectedProductGrid_PointerEntered" PointerExited="SelectedProductGrid_PointerExited">
                                <Grid
                                    Padding="20,10"
                                    BorderBrush="Transparent"
                                    BorderThickness="0,0,0,1"
                                    ColumnSpacing="20">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="5*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="Button">
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="Padding" Value="6,8" />
                                        </Style>
                                        <Style TargetType="FontIcon">
                                            <Setter Property="FontSize" Value="16" />
                                        </Style>
                                    </Grid.Resources>
                                    <Border
                                        Height="24"
                                        Background="White"
                                        CornerRadius="100">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Text="{x:Bind OrderNumber, Mode=OneWay}" />
                                    </Border>
                                    <TextBlock
                                        Grid.Column="1"
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontWeight="Medium"
                                        Text="{x:Bind Product.Name}" />
                                    <Grid
                                        Grid.Column="2"
                                        BorderBrush="{StaticResource SecondaryBrush}"
                                        BorderThickness="1"
                                        CornerRadius="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button Command="{Binding Data.DecreaseQuantityCommand, Source={StaticResource TableProxy}}" CommandParameter="{x:Bind Product.Id}">
                                            <FontIcon Glyph="&#xF8AB;" />
                                        </Button>
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Center"
                                            Text="{x:Bind Quantity, Mode=OneWay}" />
                                        <Button
                                            Grid.Column="2"
                                            Command="{Binding Data.IncreaseQuantityCommand, Source={StaticResource TableProxy}}"
                                            CommandParameter="{x:Bind Product.Id}">
                                            <FontIcon Glyph="&#xF8AA;" />
                                        </Button>
                                    </Grid>
                                    <TextBlock
                                        Grid.Column="3"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Text="{x:Bind Product.Price, Converter={StaticResource PriceToStringConverter}}" />
                                    <TextBlock
                                        Grid.Column="4"
                                        Padding="0,0,0,2"
                                        HorizontalAlignment="Right"
                                        FontFamily="{StaticResource Lexend}"
                                        FontWeight="Normal"
                                        Text="{x:Bind TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                    <Button
                                        Grid.Column="5"
                                        Command="{Binding Data.RemoveProductCommand, Source={StaticResource TableProxy}}"
                                        CommandParameter="{x:Bind Product.Id}">
                                        <FontIcon Foreground="Red" Glyph="&#xE74D;" />
                                    </Button>
                                </Grid>
                            </ItemContainer>
                        </DataTemplate>
                    </ItemsView.ItemTemplate>
                </ItemsView>

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{x:Bind ViewModel.SelectedProductCount, Mode=OneWay, Converter={StaticResource SelectedProductCountToVisibilityConverter}, ConverterParameter=notvisibility}">
                    <FontIcon
                        Margin="0,0,0,20"
                        FontSize="32"
                        Foreground="{StaticResource SecondaryBrush}"
                        Glyph="&#xED56;" />

                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Lexend}"
                        FontWeight="Normal"
                        Foreground="white"
                        Opacity=".8"
                        Text="Chưa có món trong đơn" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontFamily="{StaticResource Lexend}"
                        FontWeight="Normal"
                        Foreground="White"
                        Opacity=".8"
                        Text="Vui lòng chọn món trong menu bên trái màn hình" />
                </StackPanel>

                <Grid Grid.Row="2" RowSpacing="6">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock>
                        <Run Text="Nhân viên:" />
                        <Run Text="{x:Bind ViewModel.EmployeeName, Mode=OneWay}" />
                    </TextBlock>
                    <StackPanel
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        Spacing="4">
                        <TextBlock FontSize="16" Text="Tổng tiền" />
                        <Border
                            Width="30"
                            Height="30"
                            Margin="0,0,6,0"
                            Background="{StaticResource SecondaryBrush}"
                            CornerRadius="100">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="14"
                                Foreground="White"
                                Text="{x:Bind ViewModel.SelectedProductCount, Mode=OneWay}"
                                TextAlignment="Center" />
                        </Border>
                        <TextBlock
                            FontFamily="{StaticResource LexendSemiBold}"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Text="{x:Bind ViewModel.TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                    </StackPanel>
                    <Grid
                        Grid.Row="1"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style x:Key="PaymentGridStyle" TargetType="Grid">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Width" Value="100" />
                                <Setter Property="Height" Value="70" />
                            </Style>
                        </Grid.Resources>
                        <Grid
                            x:Name="CashGrid"
                            Background="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToBackgroundConverter}, ConverterParameter=cash}"
                            CornerRadius="10,0,0,10"
                            PointerPressed="CashGrid_PointerPressed"
                            Style="{StaticResource PaymentGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <FontIcon Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=cash}" Glyph="&#xE8B7;" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=cash}"
                                Text="Tiền mặt" />
                        </Grid>
                        <Grid
                            x:Name="QrGrid"
                            Grid.Column="1"
                            Background="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToBackgroundConverter}, ConverterParameter=qr}"
                            CornerRadius="0,10,10,0"
                            PointerPressed="QrGrid_PointerPressed"
                            Style="{StaticResource PaymentGridStyle}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <FontIcon Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=qr}" Glyph="&#xED14;" />
                            <TextBlock
                                Grid.Row="1"
                                HorizontalAlignment="Center"
                                Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=qr}"
                                Text="QR" />
                        </Grid>
                    </Grid>
                    <Button
                        x:Name="CheckoutButton"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="70"
                        Padding="0,10"
                        HorizontalAlignment="Stretch"
                        Background="{StaticResource SecondaryBrush}"
                        Click="CheckoutButton_Click"
                        Command="{x:Bind ViewModel.CheckoutCommand}"
                        CornerRadius="10"
                        FontFamily="{StaticResource LexendMedium}"
                        FontSize="20"
                        FontWeight="Medium"
                        Foreground="White">
                        Thanh toán
                    </Button>
                </Grid>
            </Grid>
        </Grid>

        <RelativePanel Margin="-20,-105,-20,-20" Padding="10">
            <Popup
                x:Name="CheckoutPopup"
                Width="800"
                Height="200"
                IsLightDismissEnabled="False"
                IsOpen="False"
                LightDismissOverlayMode="On"
                RelativePanel.AlignRightWithPanel="True">
                <Grid
                    Width="{Binding ElementName=CheckoutPopup, Path=Width}"
                    Height="{Binding ElementName=CheckoutPopup, Path=Height}"
                    Padding="20"
                    Background="White"
                    Canvas.ZIndex="2"
                    CornerRadius="20">
                    <Grid.RenderTransform>
                        <TranslateTransform x:Name="PopupTranslateTransform" X="300" />
                    </Grid.RenderTransform>
                    <Grid RowSpacing="10" Visibility="{x:Bind ViewModel.IsCheckingout, Mode=OneWay, Converter={StaticResource NotVisibilityConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="{StaticResource LexendBold}"
                                FontSize="16"
                                FontWeight="Bold"
                                TextAlignment="Center">
                                <Run Text="Đơn" />
                                <Run Text="#" /><Run Text="{x:Bind ViewModel.OrderId, Converter={StaticResource IdToTextConverter}, Mode=OneWay}" />
                                <Run Text="-" />
                                <Run Foreground="{StaticResource SecondaryBrush}" Text="{x:Bind ViewModel.SelectedTable.Name, Mode=OneWay}" />
                            </TextBlock>
                        </Grid>

                        <Grid Grid.Row="1" ColumnSpacing="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Spacing="20">
                                <StackPanel
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal"
                                    Spacing="6">
                                    <FontIcon
                                        FontSize="14"
                                        FontWeight="Bold"
                                        Glyph="&#xE77B;" />
                                    <TextBlock Text="{x:Bind ViewModel.ClientPhoneNumber, Mode=OneWay, Converter={StaticResource PhoneToStringConverter}}" />
                                </StackPanel>

                                <ListView
                                    Margin="-2,0,0,0"
                                    ItemsSource="{Binding Source={StaticResource GroupedSelectedProducts}}"
                                    SelectionMode="None">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsStackPanel AreStickyGroupHeadersEnabled="True" />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.GroupStyle>
                                        <GroupStyle>
                                            <GroupStyle.HeaderTemplate>
                                                <DataTemplate x:DataType="vm:GroupedSelectedProducts">
                                                    <Border AutomationProperties.AccessibilityView="Raw">
                                                        <TextBlock
                                                            VerticalAlignment="Center"
                                                            AutomationProperties.AccessibilityView="Raw"
                                                            FontFamily="{StaticResource LexendMedium}"
                                                            FontSize="14"
                                                            FontWeight="Medium"
                                                            Text="{x:Bind CategoryName}" />
                                                    </Border>
                                                </DataTemplate>
                                            </GroupStyle.HeaderTemplate>
                                            <GroupStyle.HeaderContainerStyle>
                                                <Style TargetType="ListViewHeaderItem">
                                                    <Setter Property="Background" Value="#f6f6f6" />
                                                    <Setter Property="Margin" Value="0" />
                                                    <Setter Property="Height" Value="30" />
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="ListViewHeaderItem">
                                                                <Border
                                                                    Background="{TemplateBinding Background}"
                                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                                    <StackPanel>
                                                                        <ContentPresenter
                                                                            x:Name="HeaderContentPresenter"
                                                                            Margin="{TemplateBinding Padding}"
                                                                            Padding="0,6,0,0"
                                                                            Content="{TemplateBinding Content}"
                                                                            ContentTemplate="{TemplateBinding ContentTemplate}" />
                                                                    </StackPanel>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </GroupStyle.HeaderContainerStyle>
                                        </GroupStyle>
                                    </ListView.GroupStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:SelectedProductWrapperViewModel">
                                            <Grid ColumnSpacing="10">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="4*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="3*" />
                                                    <ColumnDefinition Width="3*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontFamily" Value="{StaticResource LexendMedium}" />
                                                        <Setter Property="FontWeight" Value="Medium" />
                                                        <Setter Property="FontSize" Value="13" />
                                                    </Style>
                                                </Grid.Resources>
                                                <TextBlock Text="{x:Bind OrderNumber, Mode=OneWay}" />
                                                <TextBlock Grid.Column="1" Text="{x:Bind Product.Name}" />
                                                <TextBlock Grid.Column="2" Text="{x:Bind Quantity, Mode=OneWay}" />
                                                <TextBlock Grid.Column="3" Text="{x:Bind Product.Price, Converter={StaticResource PriceToStringConverter}}" />
                                                <TextBlock Grid.Column="4" Text="{x:Bind TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>

                            <Grid Grid.Column="1" RowSpacing="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Spacing="20">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontFamily" Value="{StaticResource LexendLight}" />
                                            <Setter Property="FontWeight" Value="Light" />
                                        </Style>
                                    </StackPanel.Resources>
                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal"
                                        Spacing="6">
                                        <TextBlock Foreground="#bdbdbd" Text="{x:Bind ViewModel.CreatedAt, Mode=OneWay}" />
                                        <FontIcon
                                            FontSize="16"
                                            Foreground="#bdbdbd"
                                            Glyph="&#xEC92;" />
                                    </StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Số món" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Text="{x:Bind ViewModel.SelectedProductCount, Mode=OneWay}" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Tổng tiền" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Text="{x:Bind ViewModel.TotalPrice, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Giảm giá" />
                                        <Border
                                            Grid.Column="1"
                                            Margin="0,-4"
                                            Padding="10,4"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="10">
                                            <TextBlock>
                                                <Run Text="-" /><Run Text="{x:Bind ViewModel.DiscountPercent, Mode=OneWay}" /><Run Text="%" />
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <Border
                                        Width="120"
                                        HorizontalAlignment="Right"
                                        BorderBrush="#bdbdbd"
                                        BorderThickness="0,0,0,1">
                                        <TextBlock HorizontalAlignment="Right">
                                            <Run Text="-" /><Run Text="{x:Bind ViewModel.Discount, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                        </TextBlock>
                                    </Border>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            VerticalAlignment="Bottom"
                                            FontFamily="{StaticResource LexendMedium}"
                                            FontWeight="Medium"
                                            Text="Khách cần trả" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontFamily="{StaticResource LexendMedium}"
                                            FontSize="18"
                                            FontWeight="Medium"
                                            Foreground="{StaticResource SecondaryBrush}"
                                            Text="{x:Bind ViewModel.PriceAfterDiscount, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Khách thanh toán" />
                                        <Border
                                            Grid.Column="1"
                                            Width="120"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            BorderBrush="#bdbdbd"
                                            BorderThickness="0,0,0,1">
                                            <TextBlock HorizontalAlignment="Right" Text="{x:Bind ViewModel.ClientPayment, Mode=OneWay, Converter={StaticResource PriceToStringConverter}}" />
                                        </Border>
                                    </Grid>

                                    <Border
                                        Padding="10,10,4,10"
                                        Background="#eee"
                                        CornerRadius="10"
                                        Visibility="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToVisibilityConverter}, ConverterParameter=Cash}">
                                        <ItemsRepeater ItemsSource="{x:Bind ViewModel.PaymentSuggestions, Mode=OneWay}">
                                            <ItemsRepeater.Layout>
                                                <controls:WrapLayout HorizontalSpacing="10" VerticalSpacing="10" />
                                            </ItemsRepeater.Layout>
                                            <ItemsRepeater.ItemTemplate>
                                                <DataTemplate x:DataType="x:Int32">
                                                    <Button
                                                        x:Name="QuickSelectClientPaymentButton"
                                                        Padding="18,8"
                                                        Background="Transparent"
                                                        BorderBrush="#ccc"
                                                        Command="{Binding Data.QuickSelectClientPaymentCommand, Source={StaticResource TableProxy}}"
                                                        CommandParameter="{x:Bind}"
                                                        Content="{x:Bind Converter={StaticResource PriceToStringConverter}}"
                                                        CornerRadius="20" />
                                                </DataTemplate>
                                            </ItemsRepeater.ItemTemplate>
                                        </ItemsRepeater>
                                    </Border>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Bottom" Text="Tiền thừa trả khách" />
                                        <TextBlock
                                            Grid.Column="1"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            FontFamily="{StaticResource LexendMedium}"
                                            FontSize="16"
                                            FontWeight="Medium"
                                            Text="{x:Bind ViewModel.ClientChange, Converter={StaticResource PriceToStringConverter}, Mode=OneWay}" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="Padding" Value="6" />
                                                <Setter Property="VerticalAlignment" Value="Center" />
                                                <Setter Property="Width" Value="100" />
                                                <Setter Property="Spacing" Value="10" />
                                                <Setter Property="CornerRadius" Value="10" />
                                            </Style>
                                        </Grid.Resources>
                                        <StackPanel Background="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToBackgroundConverter}, ConverterParameter=cash}">
                                            <FontIcon Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=cash}" Glyph="&#xE8B7;" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=cash}"
                                                Text="Tiền mặt" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Background="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToBackgroundConverter}, ConverterParameter=qr}">
                                            <FontIcon Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=qr}" Glyph="&#xED14;" />
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                Foreground="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToForegroundConverter}, ConverterParameter=qr}"
                                                Text="QR" />
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock
                                        FontFamily="{StaticResource LexendMedium}"
                                        FontWeight="Medium"
                                        Foreground="Green"
                                        Text="{x:Bind ViewModel.SuccessMessage, Mode=OneWay}"
                                        TextWrapping="WrapWholeWords"
                                        Visibility="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToVisibilityConverter}, ConverterParameter=QR}" />
                                </StackPanel>
                                <Button
                                    x:Name="CompleteOrderButton"
                                    Grid.Row="1"
                                    Padding="16,9"
                                    Background="Green"
                                    BorderBrush="Transparent"
                                    Command="{x:Bind ViewModel.CompleteCheckoutCommand}"
                                    CommandParameter="Cash"
                                    Content="Đã thanh toán"
                                    CornerRadius="12"
                                    FontFamily="{StaticResource LexendMedium}"
                                    FontWeight="Medium"
                                    Foreground="White"
                                    Visibility="{x:Bind ViewModel.PaymentMethod, Mode=OneWay, Converter={StaticResource PaymentTypeToVisibilityConverter}, ConverterParameter=Cash}" />
                            </Grid>
                        </Grid>
                    </Grid>
                    <ProgressRing
                        Margin="0,-120,0,0"
                        Canvas.ZIndex="10"
                        IsActive="{x:Bind ViewModel.IsCheckingout, Mode=OneWay}" />
                </Grid>
            </Popup>
        </RelativePanel>
    </Grid>
</Page>
